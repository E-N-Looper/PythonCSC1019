def check_input(option_count, input_type):
  keep_going = True
  while keep_going == True:
    if (input_type == "int"):
      user_num = input("Enter a number from 1 to "+str(option_count))
      if user_num.strip().isdigit():
        user_num = int(user_num)
        if user_num <=option_count and user_num >=1:
          keep_going = False
          return user_num
        else:
          print("Invalid input, please try again")



